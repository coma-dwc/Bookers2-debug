<!-- books#show(book detail)の上のコメント一覧 -->
<!--<table class='table'>-->
<!--    <tbody>-->
          <table class='table'>
            <% book.book_comments.each do |book_comment| %>
          <tr>
            <td>
          <%= link_to users_path(book_comment) do %>
            <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
            <%= book_comment.user.name %>
            <% end %>
            </td>

            <td><%= book_comment.comment %></td>
            <td>
              <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger", remote:true, data: {"turbolinks" => false} %>
            <% end %>
            </td>
            </tr>
            <% end %>
          </table>